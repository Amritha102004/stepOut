<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>stepOut - Category Management</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
    
    <link rel="stylesheet" href="/css/admin/header.css">
    <link rel="stylesheet" href="/css/admin/sidebar.css">
    <link rel="stylesheet" href="/css/admin/category.css">
</head>
<body>
    
    <%- include('./partials/header') %>
    <%- include('./partials/sidebar', {activePage: 'category'}) %>
    
    <div class="admin-content">
        <!-- Flash messages -->
        <% if (locals.success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <% if (locals.error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!--breadcrumb -->
        <div class="content-header">
            <h3 class="mb-0 label">Category</h3>
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/admin/dashboard" class="text-decoration-none text-dark">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        category
                    </li>
                </ol>
            </nav>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="/admin/addCategory" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> Add New Category
                </a>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-body">
                <form action="/admin/category" method="GET" id="searchForm">
                    <div class="search-filter-row">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input 
                                type="text" 
                                class="form-control" 
                                placeholder="Search categories..." 
                                name="search" 
                                value="<%= searchQuery || '' %>"
                            >
                        </div>
                        
                        <a href="/admin/category" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i> Reset
                        </a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="category-table-container">
            <div class="card">
                <div class="card-body p-0">
                    <% if (categories && categories.length > 0) { %>
                        <table class="category-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Offer</th>
                                    <th>Products</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(function(category, index) { %>
                                    <tr>
                                        <td><%= (currentPage - 1) * limit + index + 1 %></td>
                                        <td class="category-name"><%= category.name %></td>
                                        <td class="category-description"><%= category.description %></td>
                                        <td>
                                            <% if (category.offer && category.offer > 0) { %>
                                                <span class="badge bg-success"><%= category.offer %>% OFF</span>
                                            <% } else { %>
                                                <span class="text-muted">No offer</span>
                                            <% } %>
                                        </td>
                                        <td class="product-count"><%= category.productCount || 0 %></td>
                                        <td>
                                            <form action="/admin/toggleCategoryListing/<%= category._id %>" method="POST" class="toggle-form">
                                                <label class="switch">
                                                    <input type="checkbox" <%= category.isListed ? 'checked' : '' %>>
                                                    <span class="slider"></span>
                                                </label>
                                                <span class="ms-2 <%= category.isListed ? 'text-success' : 'text-danger' %>">
                                                    <%= category.isListed ? 'Listed' : 'Unlisted' %>
                                                </span>
                                            </form>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/admin/editCategory?id=<%= category._id %>" class="action-btn edit-btn">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button 
                                                    class="action-btn delete-btn" 
                                                    data-id="<%= category._id %>" 
                                                    data-name="<%= category.name %>"
                                                    <%= category.productCount > 0 ? 'disabled' : '' %>
                                                    title="<%= category.productCount > 0 ? 'Cannot delete category with products' : 'Delete category' %>"
                                                >
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="no-categories">
                            <div class="no-categories-icon">
                                <i class="fas fa-folder-open"></i>
                            </div>
                            <div class="no-categories-text">No categories found</div>
                            <a href="/admin/addCategory" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i> Add New Category
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="category-cards-container">
            <% if (categories && categories.length > 0) { %>
                <% categories.forEach(function(category, index) { %>
                    <div class="card category-card">
                        <div class="category-card-header">
                            <h5 class="category-card-title"><%= category.name %></h5>
                            <span class="<%= category.isListed ? 'badge bg-success' : 'badge bg-danger' %>">
                                <%= category.isListed ? 'Listed' : 'Unlisted' %>
                            </span>
                        </div>
                        <div class="category-card-body">
                            <div class="category-card-row">
                                <span class="category-card-label">Description:</span>
                                <span class="category-card-value"><%= category.description.substring(0, 50) %><%= category.description.length > 50 ? '...' : '' %></span>
                            </div>
                            <div class="category-card-row">
                                <span class="category-card-label">Offer:</span>
                                <span class="category-card-value">
                                    <% if (category.offer && category.offer > 0) { %>
                                        <span class="badge bg-success"><%= category.offer %>% OFF</span>
                                    <% } else { %>
                                        <span class="text-muted">No offer</span>
                                    <% } %>
                                </span>
                            </div>
                            <div class="category-card-row">
                                <span class="category-card-label">Products:</span>
                                <span class="category-card-value"><%= category.productCount || 0 %></span>
                            </div>
                            <div class="category-card-row">
                                <span class="category-card-label">Status:</span>
                                <form action="/admin/toggleCategoryListing/<%= category._id %>" method="POST" class="toggle-form d-flex align-items-center">
                                    <label class="switch">
                                        <input type="checkbox" <%= category.isListed ? 'checked' : '' %>>
                                        <span class="slider"></span>
                                    </label>
                                    <span class="ms-2 <%= category.isListed ? 'text-success' : 'text-danger' %>">
                                        <%= category.isListed ? 'Listed' : 'Unlisted' %>
                                    </span>
                                </form>
                            </div>
                        </div>
                        <div class="category-card-actions">
                            <a href="/admin/editCategory?id=<%= category._id %>" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <button 
                                class="btn btn-sm btn-danger delete-btn" 
                                data-id="<%= category._id %>" 
                                data-name="<%= category.name %>"
                                <%= category.productCount > 0 ? 'disabled' : '' %>
                            >
                                <i class="fas fa-trash me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-categories">
                    <div class="no-categories-icon">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <div class="no-categories-text">No categories found</div>
                    <a href="/admin/addCategory" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i> Add New Category
                    </a>
                </div>
            <% } %>
        </div>
        
        <% if (categories && categories.length > 0 && totalPages > 1) { %>
            <div class="pagination-container">
                <div class="pagination-info">
                    Showing <%= (currentPage - 1) * limit + 1 %> to <%= Math.min(currentPage * limit, totalCategories) %> of <%= totalCategories %> categories
                </div>
                <ul class="pagination">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/admin/category?page=<%= currentPage - 1 %>&search=<%= searchQuery %>" aria-label="Previous">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    
                    <% 
                    let startPage = Math.max(1, currentPage - 2);
                    let endPage = Math.min(totalPages, startPage + 4);
                    
                    if (endPage - startPage < 4) {
                        startPage = Math.max(1, endPage - 4);
                    }
                    
                    for (let i = startPage; i <= endPage; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/admin/category?page=<%= i %>&search=<%= searchQuery %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    
                    <% if (endPage < totalPages) { %>
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/admin/category?page=<%= totalPages %>&search=<%= searchQuery %>">
                                <%= totalPages %>
                            </a>
                        </li>
                    <% } %>
                    
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/admin/category?page=<%= currentPage + 1 %>&search=<%= searchQuery %>" aria-label="Next">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        <% } %>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
    <script src="/js/admin/category.js"></script>
    <script src="/js/admin/sidebar.js"></script>
</body>
</html>