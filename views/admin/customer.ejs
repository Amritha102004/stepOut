<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StepOut Admin Customers</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin/header.css">
  <link rel="stylesheet" href="/css/admin/sidebar.css">
</head>

<body class="bg-gray-100">

  <!-- Navbar -->
  <%- include('./partials/header') %>

    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <div class="w-64 bg-dark text-white">
        <%- include('./partials/sidebar') %>
      </div>

      <!-- Main Content -->
      <main class="flex-1 p-6">
        <h2 style="padding-top: 3.5rem; font-size: 28px;">Customers</h2>

        <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/admin/dashboard" class="text-decoration-none">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Customers
            </li>
          </ol>
        </nav>

        <div class="bg-white p-4 rounded-xl shadow-md overflow-auto">
          <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Joined At</th>
                <th>Action</th>
                <th>View</th>
              </tr>
            </thead>
            <tbody>
              <% if (customers.length> 0) { %>
                <% customers.forEach((customer, index)=> { %>
                  <tr>
                    <td>
                      <%= (currentPage - 1) * 10 + index + 1 %>
                    </td>
                    <td>
                      <%= customer.fullName %>
                    </td>
                    <td>
                      <%= customer.email %>
                    </td>
                    <td>
                      <% if (customer.isBlocked) { %>
                        <span class="text-danger">Blocked</span>
                        <% } else { %>
                          <span class="text-success">Active</span>
                          <% } %>
                    </td>
                    <td>
                      <%= customer.createdAt.toDateString() %>
                    </td>
                    <td>
                      <% if (customer.isBlocked) { %>
                        <a href="/admin/unblock/<%= customer._id %>" class="btn btn-success btn-sm">Unblock</a>
                        <% } else { %>
                          <a href="/admin/block/<%= customer._id %>" class="btn btn-danger btn-sm">Block</a>
                          <% } %>
                    </td>
                    <td>
                      <a href="/admin/userprofile/<%= customer._id %>" class="btn btn-sm btn-outline-primary"
                        title="View Profile">
                        <i class="bi bi-eye "></i>
                      </a>
                    </td>
                  </tr>
                  <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="6">No customers found.</td>
                      </tr>
                      <% } %>
            </tbody>
          </table>

          <!-- Pagination -->
          <div class="mt-4 flex justify-center gap-2">
            <% if (currentPage> 1) { %>
              <a class="px-3 py-1 bg-gray-300 rounded hover:bg-gray-400"
                href="/admin/customer?page=<%= currentPage - 1 %>">« Prev</a>
              <% } %>

                <% for (let i=1; i <=totalPages; i++) { %>
                  <a class="px-3 py-1 rounded <%= currentPage === i ? 'bg-blue-500 text-white' : 'bg-gray-200 hover:bg-gray-300' %>"
                    href="/admin/customer?page=<%= i %>">
                    <%= i %>
                  </a>
                  <% } %>

                    <% if (currentPage < totalPages) { %>
                      <a class="px-3 py-1 bg-gray-300 rounded hover:bg-gray-400"
                        href="/admin/customer?page=<%= currentPage + 1 %>">Next »</a>
                      <% } %>
          </div>
        </div>
      </main>
    </div>



</body>

</html>