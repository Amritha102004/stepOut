<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StepOut Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="/css/admin/header.css">
    <link rel="stylesheet" href="/css/admin/sidebar.css">
</head>

<body>
    <!-- Top Navbar -->
    <%- include('./partials/header') %>
    <!-- Sidebar -->
    <%- include('./partials/sidebar') %>
    
    <!-- Main Content -->
    <div class="main-content">
        <h3 class="label">Dashboard</h3>
        <!-- Stats Cards -->
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="stats-card sales">
                    <i class="fas fa-rupee-sign"></i>
                    <div class="number">₹ 5,55,000</div>
                    <div class="label">Total Sales</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stats-card visitors">
                    <i class="fas fa-eye"></i>
                    <div class="number">2,500</div>
                    <div class="label">Visitors</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stats-card orders">
                    <i class="fas fa-shopping-bag"></i>
                    <div class="number">1,500</div>
                    <div class="label">Total Orders</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="stats-card users">
                    <i class="fas fa-user"></i>
                    <div class="number">1,013</div>
                    <div class="label">Users</div>
                </div>
            </div>
        </div>
        
        <!-- Revenue Chart -->
        <div class="chart-container">
            <div class="chart-header">
                <div>
                    <div class="chart-title">Total Revenue</div>
                    <div class="revenue-amount">₹50,23,780</div>
                    <div class="change-indicator">
                        <i class="fas fa-arrow-up me-1"></i> 5% increase since last month
                    </div>
                </div>
                <div class="chart-legend">
                    <div class="legend-item">
                        <div class="legend-color" style="background-color: #333;"></div>
                        <span>Profit</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-color" style="background-color: #ddd;"></div>
                        <span>Loss</span>
                    </div>
                </div>
            </div>
            
            <div class="chart-wrapper">
                <!-- Y-Axis Labels -->
                <div class="chart-axis y-axis-0"><span>0</span></div>
                <div class="chart-axis y-axis-20"><span>20%</span></div>
                <div class="chart-axis y-axis-40"><span>40%</span></div>
                <div class="chart-axis y-axis-60"><span>60%</span></div>
                <div class="chart-axis y-axis-80"><span>80%</span></div>
                <div class="chart-axis y-axis-100"><span>100%</span></div>
                
                <!-- Chart Bars -->
                <div class="chart-bar-container">
                    <div class="chart-bar" style="height: 85%;"></div>
                    <div class="chart-bar" style="height: 65%;"></div>
                    <div class="chart-bar" style="height: 70%;"></div>
                    <div class="chart-bar" style="height: 55%;"></div>
                    <div class="chart-bar" style="height: 65%;"></div>
                    <div class="chart-bar loss" style="height: 40%;"></div>
                    <div class="chart-bar" style="height: 60%;"></div>
                    <div class="chart-bar" style="height: 70%;"></div>
                    <div class="chart-bar" style="height: 65%;"></div>
                    <div class="chart-bar" style="height: 60%;"></div>
                </div>
            </div>
            
            <!-- X-Axis Labels -->
            <div class="chart-labels">
                <div class="chart-label">Jan</div>
                <div class="chart-label">Feb</div>
                <div class="chart-label">Mar</div>
                <div class="chart-label">Apr</div>
                <div class="chart-label">May</div>
                <div class="chart-label">Jun</div>
                <div class="chart-label">Jul</div>
                <div class="chart-label">Aug</div>
                <div class="chart-label">Sep</div>
                <div class="chart-label">Oct</div>
            </div>
        </div>
        
        <!-- Latest Orders -->
        <div class="orders-container">
            <div class="orders-header">
                <div class="orders-title">Latest Orders</div>
            </div>
            
            <div class="table-responsive">
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Order ID</span>
                                    <i class="fas fa-sort ms-1 sort-icon"></i>
                                </div>
                            </th>
                            <th>Product</th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Date</span>
                                    <i class="fas fa-sort ms-1 sort-icon"></i>
                                </div>
                            </th>
                            <th>Customer</th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Total</span>
                                    <i class="fas fa-sort ms-1 sort-icon"></i>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Payment</span>
                                    <i class="fas fa-sort ms-1 sort-icon"></i>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Status</span>
                                    <i class="fas fa-sort ms-1 sort-icon"></i>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex align-items-center">
                                    <span>Action</span>
                                    <i class="fas fa-sort ms-1 sort-icon"></i>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#302012</td>
                            <td>
                                <div class="product-info">
                                    <img src="/api/placeholder/50/50" alt="Nike CITY" class="product-img">
                                    <div>
                                        <div class="product-name">Nike CITY</div>
                                        <div class="product-meta">+5 Products</div>
                                    </div>
                                </div>
                            </td>
                            <td>29 Dec 2022</td>
                            <td>jaydev</td>
                            <td>₹15000</td>
                            <td>24 Jan 2023</td>
                            <td><span class="status-badge processing">Processing</span></td>
                            <td>
                                <div class="action-btns">
                                    <div class="action-btn">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="action-btn">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div class="action-btn delete">
                                        <i class="fas fa-trash"></i>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>#302012</td>
                            <td>
                                <div class="product-info">
                                    <img src="/api/placeholder/50/50" alt="Nike Zoom" class="product-img">
                                    <div>
                                        <div class="product-name">Nike Zoom</div>
                                        <div class="product-meta">+3 Products</div>
                                    </div>
                                </div>
                            </td>
                            <td>29 Dec 2022</td>
                            <td>jaydev</td>
                            <td>₹15000</td>
                            <td>24 Jan 2023</td>
                            <td><span class="status-badge processing">Processing</span></td>
                            <td>
                                <div class="action-btns">
                                    <div class="action-btn">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="action-btn">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div class="action-btn delete">
                                        <i class="fas fa-trash"></i>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>#302012</td>
                            <td>
                                <div class="product-info">
                                    <img src="/api/placeholder/50/50" alt="Jordan Retro" class="product-img">
                                    <div>
                                        <div class="product-name">Jordan Retro</div>
                                        <div class="product-meta">+3 Products</div>
                                    </div>
                                </div>
                            </td>
                            <td>29 Dec 2022</td>
                            <td>jaydev</td>
                            <td>₹15000</td>
                            <td>24 Jan 2023</td>
                            <td><span class="status-badge processing">Processing</span></td>
                            <td>
                                <div class="action-btns">
                                    <div class="action-btn">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="action-btn">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div class="action-btn delete">
                                        <i class="fas fa-trash"></i>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>#302012</td>
                            <td>
                                <div class="product-info">
                                    <img src="/api/placeholder/50/50" alt="KatikaSpeed" class="product-img">
                                    <div>
                                        <div class="product-name">KatikaSpeed</div>
                                        <div class="product-meta">+3 Products</div>
                                    </div>
                                </div>
                            </td>
                            <td>29 Dec 2022</td>
                            <td>jaydev</td>
                            <td>₹15000</td>
                            <td>24 Jan 2023</td>
                            <td><span class="status-badge processing">Processing</span></td>
                            <td>
                                <div class="action-btns">
                                    <div class="action-btn">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="action-btn">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div class="action-btn delete">
                                        <i class="fas fa-trash"></i>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/admin/sidebar.js"></script>
</body>
</html>