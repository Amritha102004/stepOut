<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>stepOut Sales Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <link rel="stylesheet" href="/css/admin/header.css">
    <link rel="stylesheet" href="/css/admin/sidebar.css">
    <link rel="stylesheet" href="/css/admin/product.css">
    
    <style>
        .stats-card {
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s;
            border: none;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
        }
        
        .stats-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-right: 15px;
        }
        
        .stats-value {
            font-size: 24px;
            font-weight: 600;
            margin: 0;
        }
        
        .stats-label {
            color: #6c757d;
            margin: 0;
        }
        
        .bg-revenue {
            background-color: rgba(76, 175, 80, 0.1);
            color: #4caf50;
        }
        
        .bg-orders {
            background-color: rgba(33, 150, 243, 0.1);
            color: #2196f3;
        }
        
        .bg-average {
            background-color: rgba(156, 39, 176, 0.1);
            color: #9c27b0;
        }
        
        .bg-discount {
            background-color: rgba(255, 152, 0, 0.1);
            color: #ff9800;
        }
        
        .chart-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            padding: 20px;
            margin-bottom: 20px;
            height: auto;
            max-height: 450px;
            overflow: hidden;
        }
        
        .filter-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .date-range-picker {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .export-btn {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .export-btn i {
            font-size: 16px;
        }
        
        .top-products-table img {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 5px;
        }
        
        .payment-method-chart, .order-status-chart {
            height: 250px;
        }
        
        @media (max-width: 768px) {
            .stats-row {
                flex-direction: column;
            }
            
            .stats-card {
                margin-bottom: 15px;
            }
        }
    </style>
</head>

<body>

    <%- include('./partials/header') %>
    <%- include('./partials/sidebar', {activePage: 'salesReport' }) %>

    <div class="admin-content">
        <!-- Flash messages -->
        <% if (locals.success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <% if (locals.error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!--breadcrumb -->
        <div class="content-header">
            <h3 class="mb-0 label">Sales Report</h3>
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/admin/dashboard" class="text-decoration-none">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Sales Report
                    </li>
                </ol>
            </nav>
        </div>

        <!-- Filters -->
        <div class="filter-card mb-4">
            <form id="reportFilterForm" action="/admin/sales-report" method="GET">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="period" class="form-label">Time Period</label>
                        <select class="form-select" id="period" name="period">
                            <option value="today" <%= period === 'today' ? 'selected' : '' %>>Today</option>
                            <option value="yesterday" <%= period === 'yesterday' ? 'selected' : '' %>>Yesterday</option>
                            <option value="week" <%= period === 'week' ? 'selected' : '' %>>Last 7 Days</option>
                            <option value="month" <%= period === 'month' ? 'selected' : '' %>>Last 30 Days</option>
                            <option value="year" <%= period === 'year' ? 'selected' : '' %>>Last Year</option>
                            <option value="custom" <%= period === 'custom' ? 'selected' : '' %>>Custom Range</option>
                        </select>
                    </div>
                    
                    <div class="col-md-5" id="dateRangeContainer" style="<%= period === 'custom' ? '' : 'display: none;' %>">
                        <label class="form-label">Custom Date Range</label>
                        <div class="date-range-picker">
                            <input type="date" class="form-control" id="startDate" name="startDate" value="<%= startDate %>">
                            <span>to</span>
                            <input type="date" class="form-control" id="endDate" name="endDate" value="<%= endDate %>">
                        </div>
                    </div>
                    
                    <div class="col-md-2">
                        <label for="paymentMethod" class="form-label">Payment Method</label>
                        <select class="form-select" id="paymentMethod" name="paymentMethod">
                            <option value="all" <%= paymentMethod === 'all' ? 'selected' : '' %>>All Methods</option>
                            <option value="COD" <%= paymentMethod === 'COD' ? 'selected' : '' %>>Cash on Delivery</option>
                            <option value="online" <%= paymentMethod === 'online' ? 'selected' : '' %>>Online Payment</option>
                            <option value="wallet" <%= paymentMethod === 'wallet' ? 'selected' : '' %>>Wallet</option>
                            <option value="partial-wallet" <%= paymentMethod === 'partial-wallet' ? 'selected' : '' %>>Partial Wallet</option>
                        </select>
                    </div>
                    
                    <div class="col-md-2">
                        <label for="orderStatus" class="form-label">Order Status</label>
                        <select class="form-select" id="orderStatus" name="orderStatus">
                            <option value="all" <%= orderStatus === 'all' ? 'selected' : '' %>>All Statuses</option>
                            <option value="pending" <%= orderStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="confirmed" <%= orderStatus === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                            <option value="shipped" <%= orderStatus === 'shipped' ? 'selected' : '' %>>Shipped</option>
                            <option value="delivered" <%= orderStatus === 'delivered' ? 'selected' : '' %>>Delivered</option>
                            <option value="cancelled" <%= orderStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                            <option value="returned" <%= orderStatus === 'returned' ? 'selected' : '' %>>Returned</option>
                        </select>
                    </div>
                    
                    <div class="col-md-12 d-flex justify-content-between align-items-end">
                        <button type="submit" class="btn btn-dark">
                            <i class="fas fa-filter me-2"></i> Apply Filters
                        </button>
                        
                        <div class="d-flex gap-2">
                            <a href="/admin/sales-report/download-pdf?<%= new URLSearchParams(query).toString() %>" class="btn btn-outline-danger export-btn">
                                <i class="fas fa-file-pdf"></i> Export PDF
                            </a>
                            <a href="/admin/sales-report/download-excel?<%= new URLSearchParams(query).toString() %>" class="btn btn-outline-success export-btn">
                                <i class="fas fa-file-excel"></i> Export Excel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Stats Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="stats-icon bg-revenue">
                            <i class="fas fa-rupee-sign"></i>
                        </div>
                        <div>
                            <p class="stats-value"><%= formatCurrency(summary.totalRevenue) %></p>
                            <p class="stats-label">Total Revenue</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="stats-icon bg-orders">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <div>
                            <p class="stats-value"><%= summary.totalOrders %></p>
                            <p class="stats-label">Total Orders</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="stats-icon bg-average">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div>
                            <p class="stats-value"><%= formatCurrency(summary.avgOrderValue) %></p>
                            <p class="stats-label">Average Order</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="stats-icon bg-discount">
                            <i class="fas fa-tags"></i>
                        </div>
                        <div>
                            <p class="stats-value"><%= formatCurrency(summary.totalDiscount) %></p>
                            <p class="stats-label">Total Discount</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="chart-container">
                    <h5 class="mb-4">Revenue Trend</h5>
                    <canvas id="revenueChart" height="300" style="max-height: 300px;"></canvas>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="chart-container">
                    <h5 class="mb-4">Payment Methods</h5>
                    <canvas id="paymentMethodChart" class="payment-method-chart" height="250" style="max-height: 250px;"></canvas>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="chart-container">
                    <h5 class="mb-4">Order Status</h5>
                    <canvas id="orderStatusChart" class="order-status-chart" height="250" style="max-height: 250px;"></canvas>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="chart-container">
                    <h5 class="mb-4">Top Selling Products</h5>
                    <div class="table-responsive">
                        <table class="table table-hover top-products-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Product</th>
                                    <th>Quantity Sold</th>
                                    <th>Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (topProducts && topProducts.length > 0) { %>
                                    <% topProducts.forEach((product, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= product.name %></td>
                                            <td><%= product.totalQuantity %></td>
                                            <td><%= formatCurrency(product.totalRevenue) %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No product data available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
        <div class="chart-container mb-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">Order Details</h5>
                <span class="badge bg-dark"><%= orders.length %> orders</span>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Amount</th>
                            <th>Discount</th>
                            <th>Final Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><a href="/admin/orders/<%= order._id %>/details" class="text-decoration-none"><%= order.orderID %></a></td>
                                    <td><%= formatDate(order.orderDate) %></td>
                                    <td><%= order.user ? order.user.fullName : 'Unknown' %></td>
                                    <td>
                                        <% if (order.paymentMethod === 'COD') { %>
                                            <span class="badge bg-secondary">COD</span>
                                        <% } else if (order.paymentMethod === 'online') { %>
                                            <span class="badge bg-primary">Online</span>
                                        <% } else if (order.paymentMethod === 'wallet') { %>
                                            <span class="badge bg-info">Wallet</span>
                                        <% } else if (order.paymentMethod === 'partial-wallet') { %>
                                            <span class="badge bg-warning">Partial Wallet</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (order.orderStatus === 'pending') { %>
                                            <span class="badge bg-warning">Pending</span>
                                        <% } else if (order.orderStatus === 'confirmed') { %>
                                            <span class="badge bg-info">Confirmed</span>
                                        <% } else if (order.orderStatus === 'shipped') { %>
                                            <span class="badge bg-primary">Shipped</span>
                                        <% } else if (order.orderStatus === 'delivered') { %>
                                            <span class="badge bg-success">Delivered</span>
                                        <% } else if (order.orderStatus === 'cancelled') { %>
                                            <span class="badge bg-danger">Cancelled</span>
                                        <% } else if (order.orderStatus === 'returned') { %>
                                            <span class="badge bg-secondary">Returned</span>
                                        <% } %>
                                    </td>
                                    <td><%= formatCurrency(order.totalAmount) %></td>
                                    <td><%= formatCurrency(order.discount) %></td>
                                    <td><%= formatCurrency(order.finalAmount) %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center py-4">No orders found for the selected period</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="/js/admin/sidebar.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle period change to show/hide date range picker
            const periodSelect = document.getElementById('period');
            const dateRangeContainer = document.getElementById('dateRangeContainer');
            
            periodSelect.addEventListener('change', function() {
                if (this.value === 'custom') {
                    dateRangeContainer.style.display = 'block';
                } else {
                    dateRangeContainer.style.display = 'none';
                }
            });
            
            // Initialize date pickers
            flatpickr("#startDate", {
                dateFormat: "Y-m-d",
                maxDate: "today"
            });
            
            flatpickr("#endDate", {
                dateFormat: "Y-m-d",
                maxDate: "today"
            });
            
            // Revenue Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            window.revenueChart = new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: <%- JSON.stringify(dailyRevenue.labels) %>,
                    datasets: [
                        {
                            label: 'Revenue',
                            data: <%- JSON.stringify(dailyRevenue.revenue) %>,
                            borderColor: '#4caf50',
                            backgroundColor: 'rgba(76, 175, 80, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Orders',
                            data: <%- JSON.stringify(dailyRevenue.orders) %>,
                            borderColor: '#2196f3',
                            backgroundColor: 'rgba(33, 150, 243, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    aspectRatio: 2,  // Width:height ratio
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Revenue (₹)'
                            },
                            grid: {
                                display: true,
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        y1: {
                            beginAtZero: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Orders'
                            },
                            grid: {
                                display: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.dataset.label === 'Revenue') {
                                        label += '₹' + context.raw.toFixed(2);
                                    } else {
                                        label += context.raw;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
            
            // Payment Method Chart
            const paymentMethodCtx = document.getElementById('paymentMethodChart').getContext('2d');
            window.paymentMethodChart = new Chart(paymentMethodCtx, {
                type: 'doughnut',
                data: {
                    labels: ['COD', 'Online', 'Wallet', 'Partial Wallet'],
                    datasets: [{
                        data: [
                            <%= paymentMethodCounts.COD %>,
                            <%= paymentMethodCounts.online %>,
                            <%= paymentMethodCounts.wallet %>,
                            <%= paymentMethodCounts['partial-wallet'] %>
                        ],
                        backgroundColor: [
                            '#6c757d',
                            '#007bff',
                            '#17a2b8',
                            '#ffc107'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    aspectRatio: 1.5,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Order Status Chart
            const orderStatusCtx = document.getElementById('orderStatusChart').getContext('2d');
            window.orderStatusChart = new Chart(orderStatusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Pending', 'Confirmed', 'Shipped', 'Delivered', 'Cancelled', 'Returned'],
                    datasets: [{
                        data: [
                            <%= orderStatusCounts.pending %>,
                            <%= orderStatusCounts.confirmed %>,
                            <%= orderStatusCounts.shipped %>,
                            <%= orderStatusCounts.delivered %>,
                            <%= orderStatusCounts.cancelled %>,
                            <%= orderStatusCounts.returned %>
                        ],
                        backgroundColor: [
                            '#ffc107',
                            '#17a2b8',
                            '#007bff',
                            '#28a745',
                            '#dc3545',
                            '#6c757d'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    aspectRatio: 1.5,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 12
                            }
                        }
                    }
                }
            });
        });

        // Fix chart rendering issues
        window.addEventListener('load', function() {
          // Force charts to redraw after a short delay
          setTimeout(() => {
            if (window.revenueChart) window.revenueChart.resize();
            if (window.paymentMethodChart) window.paymentMethodChart.resize();
            if (window.orderStatusChart) window.orderStatusChart.resize();
            
            // Set a max height for the chart containers if they're still too tall
            const chartContainers = document.querySelectorAll('.chart-container');
            chartContainers.forEach(container => {
              if (container.offsetHeight > 500) {
                container.style.height = '450px';
                container.style.overflowY = 'auto';
              }
            });
          }, 500);
        });
    </script>
</body>

</html>
