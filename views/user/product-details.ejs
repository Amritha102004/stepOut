            <!-- Related Products -->
            <% if (relatedProducts && relatedProducts.length > 0) { %>
                <div class="related-products mt-5">
                    <h3 class="section-title">You May Also Like</h3>
                    <div class="row">
                        <% relatedProducts.forEach(relatedProduct => { %>
