<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Overview - StepOut</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="/css/user/header.css">
    <link rel="stylesheet" href="/css/user/footer.css">
    <link rel="stylesheet" href="/css/user/accountCommon.css">
    <link rel="stylesheet" href="/css/user/accountSidebar.css">
    <link rel="stylesheet" href="/css/user/userAccount.css">
</head>
<body>
    <!-- Header (from partial) -->
    <%- include('./partials/header') %>

    <!-- Main Content -->
    <div class="container main-container">
        <div class="account-layout">
            <!-- Sidebar -->
            <div class="account-sidebar-container">
                <%- include('./partials/accountSidebar', { activePage: 'overview' }) %>
            </div>
            
            <!-- Content Area -->
            <div class="account-content-container">
                <div class="content-area">
                    <h2 class="section-title">Account Overview</h2>
                    
                    <!-- Profile Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <div class="card account-card">
                                <div class="card-body">
                                    <h5 class="card-title">Personal Information</h5>
                                    <div class="d-flex flex-column flex-md-row align-items-center align-items-md-start mt-3">
                                        <div class="profile-image-container me-md-4 mb-3 mb-md-0">
                                            <img src="/image/profile.png" 
                                                 class="profile-image" alt="Profile Image">
                                        </div>
                                        <div class="profile-details">
                                            <p><strong>Name:</strong> <%=req.session.user.fullName%></p>
                                            <p><strong>Email:</strong> <%=req.session.user.email%></p>
                                            <p><strong>Phone:</strong> <%=req.session.user.phoneNumber%></p>
                                            <a href="/account/editAccount" class="btn btn-primary btn-sm mt-2">Edit Profile</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card account-card">
                                <div class="card-body">
                                    <h5 class="card-title">Default Address</h5>
                                    <div class="mt-3">
                                        <% if(address!=null){ %>
                                        <p>
                                            <!-- <span class="badge bg-primary">Home</span><br> -->
                                            <%=address.name%><br>
                                            <%=address.address%><br>
                                            <%=address.city%>,<%=address.state%>-<%=address.pincode%><br>
                                            Phone:<%=address.mobile%>
                                        </p>
                                        <%}else{%>
                                            <p>
                                                no address found
                                            </p>
                                        <%}%>
                                    </div>
                                    <a href="/account/addresses" class="btn btn-primary btn-sm mt-2">Manage Addresses</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer (from partial) -->
    <%- include('./partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/user/common.js"></script>
    <script src="/js/user/accountSidebar.js"></script>
    <script src="/js/user/userAccount.js"></script>
</body>
</html>